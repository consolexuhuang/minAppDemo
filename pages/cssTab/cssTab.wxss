/* pages/cssTab/cssTab.wxss */
.tab{
  width: 100%;
  display: flex;
  position: relative
}
.tabItem{
  text-align: center;
  color: #000;
  font-size: 30rpx;
  line-height: 100rpx;
  width: 33.33%;
  position: relative;
}
.chooseItem{
  color: #896eff
}
.chooseItem2 ~.downLine{
  transform: translateX(100%);
}
.chooseItem3 ~.downLine{
  transform: translateX(200%);
}
.downLine {
    height: 4rpx;
    width: 33.33%;
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    transition: all 0.2s ease-in-out;
    -webkit-transition: all 0.2s ease-in-out;

}
.downLine::after{
  content: '';
  height: 100%;
  width: 30%;
  display: block;
  /* position: absolute;
  bottom: 0;
  left: 0;
  right: 0; */
  margin: 0 auto;
  background: #896eff;
  transform: all 0.2s ease-in-out;
  -webkit-transition: all 0.2s ease-in-out;
}