page{
  /* text-align: center; */
  padding: 10rpx 40rpx;
  box-sizing: border-box;
}
.write{
  font-size: 34rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  color: #896eff;
}
.writeAfter::after{
    content: '|';
    animation: blink 1s linear infinite;
    margin-left: 8rpx;
}
.write2{
  font-size: 34rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  color: #000;
  margin-top: 30rpx;
}
.write2::after{
    content: '|';
    animation: blink 1s linear infinite;
    margin-left: 8rpx;
}
@keyframes blink{
   0%{
        opacity: 0;
   }
   100%{
        opacity: 1;
   }
}
  